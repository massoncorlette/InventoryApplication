<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&family=Roboto&display=swap" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/index.css" />
  <script src="../helpers.js" type="module"/></script>
  <title>Inventory Application</title>
</head>
<body>
  <div id="headerContainer">
    <a href="/">
      <div id="headerTxt">
        Movies Base Network
      </div>
    </a>
  </div>
  <div id="mainBody">
    <div id="sidebarContainer">
      <div id="byGenre">
        <h2>Genre</h2>
        <% genres.forEach((genre, index) => { %>
        <div id="sidebarCells">
          <a href="/genre/<%= genre.genre_id %>"><%= genre.genre %></a>
        </div>
        <% }) %>
      </div>
      <div id="byDirector">
        <h2>Director</h2>
        <% directors.forEach((director, index) => { %>
         <div class="sidebarCells">
            <a href="/director/<%= director.director_id %>"><%= director.name %></a>
         </div>
        <% }) %>
      </div>
    </div>
    <div id="moviesDisplayContainer">
      <div id="movieDetails">
        <div><%= titleDetails.titleName %></div>
        <div><%= titleDetails.genreName %></div>
        <div><%= titleDetails.directorName %></div>

      </div>
    </div>
  </div>
</body>
</html>

