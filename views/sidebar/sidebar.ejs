<div id="sidebarContainer">
  <div id="byGenre">
    <h2>Genre</h2>
    <% genres.forEach((genre, index) => { %>
    <div class="sidebarCells">
      <%- include('sidebargenre', {
        genre: genre, 
        index: index,
      }) %>
    </div>
    <% }) %>
    <div class="addSideBarSection">
      <details class="addDataToggle">
        <summary>
          <img class="addIcon" src="/addcircle.png" />
        </summary>
        
        <div class="addIconActive">
          <form action="/addgenre" method="POST" class="updateSideBarForm">
            <input type="text" name="genrename" placeholder="Add a genre" required>
            <button type="submit">Add</button>
            
          </form>
        </div>
      </details>  
    </div>
  </div>
  <div id="byDirector">
    <h2>Director</h2>
    <% directors.forEach((director, index) => { %> 
      <div class="sidebarCells">
        <%- include('sidebardirector', {
          director: director,
          index: index,
        }) %>
      </div>
    <% }) %>    
    <div class="addSideBarSection">
      <details class="addDataToggle">
        <summary>
          <img class="addIcon" src="/addcircle.png" />
        </summary>

        <div class="addIconActive">
          <form action="/adddirector" method="POST" class="updateSideBarForm">
            <input type="text" name="genrename" placeholder="Add a director" required>
            <button type="submit">Add</button>
            
          </form>
        </div>

      </details>  
    </div>    
  </div>
</div>